{
  "name": "policy-TwitterJson-Cassandra",
  "description": "policy-TwitterJson-Cassandra",
  "sparkStreamingWindow": 6000,
  "checkpointPath": "checkpoint",
  "rawData": {
    "enabled": "false",
    "path": "myTestParquetPath"
  },
  "input": {
    "name": "in-twitter-json",
    "type": "TwitterJson",
    "configuration": {
      "consumerKey": "*********",
      "consumerSecret": "*********",
      "accessToken": "*********",
      "accessTokenSecret": "*********"
    }
  },
  "transformations": [
    {
      "name": "morphline",
      "order": 0,
      "type": "Morphlines",
      "outputFields": [
        {"name":"text"},
        {"name":"source"},
        {"name":"hashtags"},
        {"name":"retweets"}
      ],
      "configuration": {
        "morphline": {
          "id": "test1",
          "importCommands": [
            "org.kitesdk.**"
          ],
          "commands": [
            {
              "readJson": {}
            },
            {
              "extractJsonPaths": {
                "paths": {
                  "text": "/text",
                  "source": "/source",
                  "hashtag": "/hashtagEntities[]/text",
                  "retweets": "/retweetCount"
                }
              }
            },
            {
              "removeFields": {
                "blacklist": [
                  "literal:_attachment_body"
                ]
              }
            }
          ]
        }
      }
    }
  ],
  "cubes": [
    {
      "name": "testCube",
      "dimensions": [
        {
          "field": "retweets",
          "name": "rtws"
        }
      ],
      "operators": [
        {
          "name": "total",
          "type": "Count",
          "configuration": {}
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "out-cassandra",
      "type": "Cassandra",
      "configuration": {
        "connectionHost": "127.0.0.1",
        "connectionPort": "9042",
        "cluster": "Test Cluster",
        "keyspace": "sparkta",
        "sparkProperties": [
          {
            "sparkPropertyKey": "spark.cassandra.connection.keep_alive_ms",
            "sparkPropertyValue": "180000"
          }
        ]
      }
    }
  ]
}